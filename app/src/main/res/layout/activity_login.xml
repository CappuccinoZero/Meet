<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/gradient_bg"
    android:id="@+id/flowLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:cursorVisible="false"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/text_2"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/login_shape"
        android:layout_marginTop="180dp"
        android:maxLength="11"
        android:maxLines="1"
        android:inputType="numberSigned"
        android:id="@+id/login_number_edit"
        android:hint="账号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:paddingEnd="20dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/text_2"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/login_shape"
        android:layout_marginTop="60dp"
        android:maxLines="1"
        android:layout_below="@id/login_number_edit"
        android:inputType="textPassword"
        android:id="@+id/login_password_edit"
        android:hint="密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_3"
        android:id="@+id/login_Button"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/login_password_edit"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="登录"
        android:background="@drawable/bg_ripple_register_next"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <ImageView
        android:id="@+id/flowBack"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:src="@mipmap/onback_white"
        android:background="@drawable/bg_ripple_oval_black"
        android:padding="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />
</RelativeLayout>