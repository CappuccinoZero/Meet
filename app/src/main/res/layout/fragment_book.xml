<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="225dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/recommend_coll_layout"
            app:contentScrim="@color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:layout_collapseMode="parallax"
                android:src="@drawable/dog_background"
                android:id="@+id/headImage"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/baike_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/baike_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="start"
        android:elevation="8dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFFFFF"
        android:layout_marginTop="98dp"
        android:layout_marginStart="8dp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/header"
        android:id="@+id/header"/>
    <TextView
        android:gravity="center|start"
        android:paddingStart="24dp"
        android:text="搜索"
        android:textColor="@color/text_back_1"
        android:textSize="@dimen/text_2"
        android:clickable="true"
        android:elevation="8dp"
        android:layout_marginTop="168dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:id="@+id/baike_search"
        android:background="@drawable/bg_search"
        android:layout_width="match_parent"
        android:layout_height="42dp"/>
    <View
        android:id="@+id/mStateBar"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="22dp"/>
</android.support.design.widget.CoordinatorLayout>
