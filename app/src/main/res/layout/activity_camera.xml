<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".camera_demo.CameraActivity">
    <com.lin.meet.camera_demo.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:background="#00000000"
            android:id="@+id/camera_top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:clickable="true"
                android:id="@+id/back"
                android:background="@drawable/bg_ripple_oval_gray"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/onback_white"/>
            <ImageView
                android:padding="4dp"
                android:clickable="true"
                android:background="@drawable/bg_ripple_oval_gray"
                android:id="@+id/light"
                android:layout_centerInParent="true"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/light_close"
                />
            <ImageView
                android:padding="5dp"
                android:clickable="true"
                android:background="@drawable/bg_ripple_oval_gray"
                android:id="@+id/camera_setting"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/setting2" />
        </RelativeLayout>
        <LinearLayout
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/container_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
                <RelativeLayout
                    android:layout_weight="18"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:background="@drawable/shape_cornet_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/camera_crop"/>
                    <include layout="@layout/oval_layout"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_1"
                        android:layout_centerVertical="true"
                        />
                    <include layout="@layout/oval_layout"
                        android:layout_above="@id/view_1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_2"
                        />
                    <include layout="@layout/bubble_layout"
                        android:layout_below="@id/view_1"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_3"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="4">
            <ImageView
                android:padding="4dp"
                android:clickable="true"
                android:background="@drawable/bg_ripple_oval_gray"
                android:id="@+id/open_photo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/picture"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/camera_discern"
                android:layout_marginRight="130dp"
                />
            <ImageView
                android:padding="4dp"
                android:background="@drawable/bg_ripple_oval_gray"
                android:id="@+id/open_history"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/history"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/camera_discern"
                android:layout_marginLeft="130dp"
                android:clickable="true"
                />
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_camera"/>
            <ImageView
                android:id="@+id/camera_discern"
                android:scaleType="center"
                android:layout_centerInParent="true"
                android:src="@mipmap/camera"
                android:padding="50dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="6dp"
                android:elevation="9dp"
                android:background="@drawable/bg_camera_ripple"
                android:layout_width="64dp"
                android:layout_height="64dp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>