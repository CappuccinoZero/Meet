<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".start.IntroduceActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <me.relex.circleindicator.CircleIndicator
        app:ci_drawable_unselected="@drawable/shape_test_2"
        app:ci_drawable="@drawable/shape_test_1"
        android:layout_marginBottom="184dp"
        android:layout_gravity="bottom"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
    <ImageView
        android:background="@drawable/bg_ripple_oval_gray"
        android:id="@+id/back"
        android:padding="5dp"
        android:src="@mipmap/onback_black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />
</FrameLayout>