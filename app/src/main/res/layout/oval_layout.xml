<?xml version="1.0" encoding="utf-8"?>
<com.lin.meet.demo.BubbleLayout android:layout_centerInParent="true"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:padding="10dp"
    app:background_color="#E6FFFFFF"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:offset="-40dp"
    app:radius="8dp"
    app:showTriangle="0dp"
    app:shadow_color="#000000"
    app:shadow_size="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_margin="6dp"
        android:layout_width="178dp"
        android:layout_height="68dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/oval_image"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@mipmap/light_open"/>
        <LinearLayout
            android:layout_marginStart="1dp"
            android:layout_width="107dp"
            android:layout_height="68dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/oval_1"
                android:textColor="@color/text_back_1"
                android:textSize="@dimen/text_0"
                android:text="名称"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/oval_2"
                android:textColor="@color/text_back_1"
                android:textSize="@dimen/text_0"
                android:text="概率: 99%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/posi"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:textSize="8sp"
                    android:textColor="@color/text_white_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有毒"
                    android:background="@drawable/poisonous"
                    />
                <TextView
                    android:id="@+id/danger"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:textSize="8sp"
                    android:textColor="@color/text_white_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="较强攻击性"
                    android:background="@drawable/bg_fill_red"
                    />
                <TextView
                    android:id="@+id/rare"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:textSize="8sp"
                    android:textColor="@color/text_white_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保护动物"
                    android:background="@drawable/rare"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/other1"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:textSize="8sp"
                    android:textColor="@color/text_white_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:background="@drawable/other"
                    />
                <TextView
                    android:id="@+id/other2"
                    android:layout_margin="1dp"
                    android:padding="2dp"
                    android:textSize="8sp"
                    android:textColor="@color/text_white_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宠物"
                    android:background="@drawable/other2"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.lin.meet.demo.BubbleLayout>