<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/loading_1"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_alignParentBottom="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginEnd="4dp"
            android:layout_toLeftOf="@+id/loading_text_1"
            style="@style/SpinKitView.ThreeBounce"
            app:SpinKit_Color="#3A559C" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/loading_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载中"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/errorView"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:src="@drawable/dog"
            android:layout_width="125dp"
            android:layout_height="125dp" />
        <TextView
            android:textSize="@dimen/text_2"
            android:textColor="@color/text_back_2"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络连接失败,请重试"/>
    </LinearLayout>
</LinearLayout>