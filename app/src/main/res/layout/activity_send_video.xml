<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".video.SendVideo">
    <RelativeLayout
        android:id="@+id/navi_Top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:background="@drawable/bg_ripple_oval_gray"
            android:id="@+id/back"
            android:layout_marginStart="6dp"
            android:padding="3dp"
            android:layout_centerVertical="true"
            android:src="@drawable/close_back"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:textColor="@color/text_back_2"
            android:textSize="@dimen/text_3"
            android:text="分享视频"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/send"
            android:layout_marginEnd="10dp"
            android:textColor="@color/onclick"
            android:text="发布"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/video_title"
        android:maxLines="2"
        android:maxLength="30"
        android:hint="请把标题写在这里 ~"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.lin.meet.override.SmoothCheckBox
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/box"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/send_text"
            app:isRect="true"
            app:color_checked="@color/camera_setting_box"
            />
        <TextView
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/send_text"
            android:textColor="@color/text_back_2"
            android:layout_alignParentEnd="true"
            android:text="使用URI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_marginTop="40dp"
        android:id="@+id/video_layout"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="180dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="true"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:src="@color/video_default"
                android:scaleType="centerCrop"
                android:id="@+id/video_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/close"
                android:padding="1dp"
                android:layout_margin="4dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_ripple_oval_bg"
                android:src="@drawable/close_back_white"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/start_video"
                android:clickable="true"
                android:paddingStart="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_ripple_oval_video"
                android:layout_centerInParent="true"
                android:src="@drawable/start_video"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <ImageView
                android:id="@+id/add_video"
                android:clickable="true"
                android:background="@drawable/bg_ripple_oval_video"
                android:layout_centerInParent="true"
                android:src="@drawable/add"
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:id="@+id/uri_Card"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="180dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:clickable="true"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:src="@color/video_default"
                android:scaleType="centerCrop"
                android:id="@+id/uri_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/uri_close"
                android:padding="1dp"
                android:layout_margin="4dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_ripple_oval_bg"
                android:src="@drawable/close_back_white"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/uri_play"
                android:clickable="true"
                android:paddingStart="6dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bg_ripple_oval_video"
                android:layout_centerInParent="true"
                android:src="@drawable/start_video"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <ImageView
                android:id="@+id/uri_add"
                android:clickable="true"
                android:background="@drawable/bg_ripple_oval_video"
                android:layout_centerInParent="true"
                android:src="@drawable/add"
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.TextInputLayout
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:id="@+id/uri_layout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:maxLines="3"
            android:textSize="@dimen/text_0"
            android:id="@+id/uri_edit"
            android:hint="视频URI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/check_uri"
        android:clickable="true"
        android:layout_gravity="end"
        android:elevation="1dp"
        android:textColor="@color/text_white_2"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_1"
        android:text="检查视频"
        android:background="@drawable/bg_ripple_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>