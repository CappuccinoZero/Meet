<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".video.SendVideo">
    <RelativeLayout
        android:id="@+id/navi_Top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:background="@drawable/bg_ripple_oval_gray"
            android:id="@+id/back"
            android:layout_marginStart="6dp"
            android:padding="3dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/close_black"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <TextView
            android:textColor="@color/text_back_2"
            android:textSize="@dimen/text_3"
            android:text="分享视频"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:paddingBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/comment_stroke"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:id="@+id/video_title"
            android:maxLines="1"
            android:maxLength="30"
            android:hint="标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.CardView
            android:layout_marginBottom="4dp"
            android:layout_above="@id/useUriLayout"
            android:layout_below="@+id/video_title"
            android:layout_marginTop="12dp"
            android:id="@+id/video_layout"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="180dp"
            android:layout_width="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:id="@+id/video_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/close"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_ripple_oval_bg"
                    android:src="@mipmap/close_white"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/start_video"
                    android:clickable="true"
                    android:paddingStart="6dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/bg_ripple_oval_video"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/video"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
                <ImageView
                    android:padding="4dp"
                    android:id="@+id/add_video"
                    android:clickable="true"
                    android:background="@drawable/bg_ripple_oval_green"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/add"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_above="@id/useUriLayout"
            android:layout_below="@+id/video_title"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:id="@+id/uri_Card"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:clickable="true"
                    android:background="@drawable/bg_ripple_rrect_gray"
                    android:scaleType="centerCrop"
                    android:id="@+id/uri_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/uri_close"
                    android:padding="4dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_ripple_oval_bg"
                    android:src="@mipmap/close_white"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/uri_play"
                    android:clickable="true"
                    android:paddingStart="6dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/bg_ripple_oval_video"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/video"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:id="@+id/useUriLayout"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.lin.meet.override.SmoothCheckBox
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/box"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_toLeftOf="@id/send_text"
                app:isRect="true"
                app:color_checked="#3F85A6" />
            <TextView
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/send_text"
                android:textColor="@color/text_back_2"
                android:layout_alignParentEnd="true"
                android:text="使用URI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:id="@+id/uri_layout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:maxLines="3"
                android:textSize="@dimen/text_0"
                android:id="@+id/uri_edit"
                android:hint="视频URI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/uri_layout"
            android:id="@+id/check_uri"
            android:clickable="true"
            android:elevation="1dp"
            android:textColor="@color/text_white_2"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_1"
            android:text="检查视频"
            android:background="@drawable/bg_ripple_check_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:elevation="8dp"
        android:paddingEnd="48dp"
        android:paddingStart="48dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/ripple_send_know"
        android:id="@+id/send"
        android:layout_marginEnd="10dp"
        android:textColor="#FBFBFB"
        android:text="发布"
        android:textSize="@dimen/text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>