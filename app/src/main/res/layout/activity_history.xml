<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".history.HistoryActivity">

    <ImageView
        android:id="@+id/history_imageview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_head"
        android:src="@drawable/bg_1"
        android:scaleType="fitXY"
        />
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/history_appbarlayout"
        android:background="#00FFFFFF"
        android:id="@+id/history_appbar"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/history_collapsing"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
            <android.support.v7.widget.Toolbar
                android:id="@+id/history_toolbar"
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="@dimen/history_toobar_height"
                app:layout_collapseMode="pin"
                >
                <ImageView
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="6dp"
                    android:clickable="true"
                    android:background="@drawable/bg_ripple_oval_gray"
                    android:id="@+id/history_back"
                    android:src="@mipmap/back_g"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />
                <com.lin.meet.override.SmoothCheckBox
                    app:color_checked="@color/Histroy_fb_color_green"
                    android:visibility="gone"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="6dp"
                    app:stroke_width="1dp"
                    android:id="@+id/select_all"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="@color/text_back_2"
                    android:textSize="@dimen/text_2"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/history_text"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textSize="@dimen/text_2"
                    android:textColor="@color/text_back_2"
                    android:text="0"
                    android:id="@+id/history_number"
                    />
                <TextView
                    android:clickable="true"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textSize="@dimen/text_2"
                    android:textColor="#FF1744"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:id="@+id/history_delete_text"
                    android:padding="4dp"
                    android:background="@drawable/bg_ripple_rrect_red"
                    />
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/history_recyclerView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    </android.support.v7.widget.RecyclerView>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_delete"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/delete_forevery"
        android:scaleType="fitXY"
        app:fabSize="normal"
        app:backgroundTint="@color/Histroy_fb_color_green"
        app:borderWidth="0dp"
        app:elevation="8dp"
        />
</android.support.design.widget.CoordinatorLayout>