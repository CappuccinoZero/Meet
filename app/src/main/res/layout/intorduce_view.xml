<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="0dp"
    android:padding="10dp"
    android:background="#00000000"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >
        <android.support.v7.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:id="@+id/introduction_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:src="@drawable/default_image"
                android:id="@+id/introduction_image"
                android:layout_width="180dp"
                android:layout_height="160dp"
                />
        </android.support.v7.widget.CardView>


        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:id="@+id/introduction_text_animal"
            android:textSize="@dimen/text_4"
            android:textColor="@color/text_back_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/introduction_image_layout"
            android:text="熊猫"
            />

        <TextView
            android:layout_toRightOf="@+id/introduction_image_layout"
            android:id="@+id/introduction_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introduction_text_animal"
            android:layout_marginStart="15dp"
            android:layout_marginTop="4dp"
            android:text="相似度:"
            android:textColor="@color/text_back_2"
            android:textSize="@dimen/text_3" />
        <TextView
            android:id="@+id/introduction_text_probability"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/text_3"
            android:textColor="@color/text_back_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introduction_text_1"
            android:layout_toRightOf="@+id/introduction_image_layout"
            android:text="87.2%"
            />
        <TextView
            android:layout_below="@+id/introduction_image_layout"
            android:id="@+id/introduction_text_2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textSize="@dimen/text_2"
            android:textColor="@color/text_back_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于它的简介:"
            />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/introduction_text_2"
            >

            <TextView
                android:id="@+id/introduction_content"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_fill_brown"
                android:orientation="vertical"
                android:textSize="@dimen/text_2"
                android:textColor="#00897B"
                android:text="默认有很多很多的字吧,大概"
                android:layout_above="@+id/introduction_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <RelativeLayout
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:id="@+id/introduction_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:clickable="true"
                    android:layout_toLeftOf="@+id/introduction_bottom_flag"
                    android:layout_marginEnd="50dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/bg_ripple_rrect_frame_1"
                    android:id="@+id/introduction_text_baike"
                    android:textColor="#00BFA5"
                    android:layout_gravity="center"
                    android:text="查询科普"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                />
                <RelativeLayout
                    android:id="@+id/introduction_result"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/introduction_bottom_flag"
                    android:layout_marginStart="50dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/bg_ripple_rrect_frame_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/introduction_text_left1"
                        android:textColor="#C51162"
                        android:layout_gravity="center"
                        android:text="确认结果"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/introduction_text_left2"
                        android:textColor="#C51162"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:text="标记地图"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
                <View
                    android:id="@+id/introduction_bottom_flag"
                    android:layout_centerInParent="true"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>