<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:fitsSystemWindows="true"
    tools:context=".drawer_setting.AboutApp">
    <android.support.v7.widget.Toolbar
        android:layout_marginTop="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginTop="40dp"
        android:src="@mipmap/meet"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_4"
        android:layout_gravity="center"
        android:textColor="@color/text_white_2"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:textSize="@dimen/text_2"
        android:layout_gravity="center"
        android:textColor="@color/text_white_1"
        android:text="@string/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_marginTop="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/version"
                android:background="@drawable/ripple_setting_item"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:paddingTop="12dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_back_2"
                    android:textSize="@dimen/text_2"
                    android:layout_gravity="center"
                    android:text="版本更新"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginEnd="4dp"
                    android:gravity="end"
                    android:textColor="@color/text_back_0"
                    android:textSize="@dimen/text_0"
                    android:layout_gravity="center"
                    android:text="已是最新版本"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#B370A4BC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/appIntroduce"
                android:background="@drawable/ripple_setting_item"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:paddingTop="12dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_back_2"
                    android:textSize="@dimen/text_2"
                    android:layout_gravity="center"
                    android:text="功能介绍"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_gravity="end"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#B370A4BC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/feedback"
                android:background="@drawable/ripple_setting_item"
                android:clickable="true"
                android:paddingBottom="10dp"
                android:paddingTop="12dp"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/text_back_2"
                    android:textSize="@dimen/text_2"
                    android:layout_gravity="center"
                    android:text="意见反馈"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@mipmap/enter"
                        android:layout_gravity="end"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="#B370A4BC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="@dimen/text_0"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:textColor="@color/text_white_2"
            android:text="Author @ Lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>