<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:orientation="vertical"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:id="@+id/item"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:foreground="@drawable/bg_ripple_rect_borderless"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/video_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:elevation="3dp"
            android:paddingBottom="3dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:background="#80FFF3EA"
            android:id="@+id/video_title"
            android:maxLines="1"
            android:textSize="@dimen/text_2"
            android:textColor="@color/text_back_2"
            android:text="很长跟长的标题，最多一行"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/play_video"
            android:clickable="true"
            android:paddingStart="8dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:background="@drawable/bg_ripple_oval_video"
            android:layout_centerInParent="true"
            android:src="@mipmap/video"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="12dp"
                android:id="@+id/video_header"
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/header"
                app:civ_border_width="1dp"
                app:civ_border_color="#fff" />
            <TextView
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:id="@+id/video_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者"
                android:background="@drawable/dynamic_nickname"
                android:textColor="#77A2B7"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
