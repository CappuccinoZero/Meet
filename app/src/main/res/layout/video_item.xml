<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="6dp"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:clickable="true"
                android:scaleType="centerCrop"
                android:id="@+id/jz_video"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </android.support.v7.widget.CardView>
        <TextView
            android:maxLines="2"
            android:textSize="@dimen/text_2"
            android:textColor="@color/text_white_2"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="很长跟长的标题，最多两行"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/start_video"
            android:clickable="true"
            android:paddingStart="6dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/bg_ripple_oval_video"
            android:layout_centerInParent="true"
            android:src="@drawable/start_video"
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/topic_header"
            android:layout_gravity="center"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/temp"
            app:civ_border_color="#C8C8C8"
            app:civ_border_width="1dp"
            />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/topic_header"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_0"
            android:textColor="#00BFA5"
            android:text="作者"/>
    </RelativeLayout>
</LinearLayout>
