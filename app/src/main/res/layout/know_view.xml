<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/know_item"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/bg_ripple_rect_borderless"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/img_layout"
            android:layout_margin="2dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:transitionName="know_img"
                android:src="@drawable/default_image"
                android:id="@+id/img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/know_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:id="@+id/know_header"
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/temp"
                app:civ_border_color="#C8C8C8"
                app:civ_border_width="1dp"
                />
            <TextView
                android:id="@+id/know_nickName"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/know_header"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_0"
                android:textColor="@color/text_back_1"
                android:text="作者"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginEnd="4dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:background="@drawable/knwo_shape"
                android:textColor="#1DE9B6"
                android:text="未解决"
                android:layout_alignParentEnd="true"
                android:id="@+id/know_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
