<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_drawer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.MainActivity">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/main_bottom_layout"
            android:layout_marginBottom="60dp"/>
        <FrameLayout
            android:fitsSystemWindows="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/main_bottom_layout"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="4dp"
            >
            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_default"
                android:id="@+id/main_bnv"
                app:menu="@menu/navigation"
                app:labelVisibilityMode="labeled"
                app:itemTextColor="@drawable/main_menu_text"
                />
            <LinearLayout
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
                <com.lin.meet.override.MyView
                    android:background="#00FFFFFF"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>
            </LinearLayout>
        </FrameLayout>
        <ImageView
            android:fitsSystemWindows="true"
            android:padding="20dp"
            android:id="@+id/open_camera_activity"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="6dp"
            android:elevation="9dp"
            android:src="@mipmap/camera"
            android:background="@drawable/bg_camera_ripple"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <FrameLayout
            android:id="@+id/animator_layout"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include layout="@layout/send_view"
            android:visibility="gone"
            android:id="@+id/formView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_nv"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_view">
        <RelativeLayout
            android:background="@drawable/drawer_bg1"
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/main_item"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="40dp"
                android:id="@+id/main_include"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>