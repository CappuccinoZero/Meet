<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    tools:context="com.lin.meet.encyclopedia.EncyclopediaActivity">
    <ImageView
    android:id="@+id/ency_img"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ency_head"
    android:src="@drawable/bg_0"
    android:scaleType="fitXY"
    />
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ency_appbar"
        android:background="#00FFFFFF"
        android:id="@+id/ency_appbar"
        >
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ency_collapsing"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentScrim="@color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sroll_view"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ency_title_baike"
                android:textColor="@color/text_white_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="动物百科"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/ency_title_name"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_4"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:text="中文名称"
                />
            <android.support.v7.widget.CardView
                android:id="@+id/ency_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="12dp"
                app:cardCornerRadius="6dp">
                <include layout="@layout/encyclopedia_view"
                    android:id="@+id/ency_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <ImageView
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:clickable="true"
        android:id="@+id/ency_back"
        android:background="@drawable/bg_ripple_oval_gray"
        android:layout_alignParentLeft="true"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/back_g"/>


</android.support.design.widget.CoordinatorLayout>
