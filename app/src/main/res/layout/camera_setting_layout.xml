<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".setting.CameraSetting">
    <android.support.v7.widget.Toolbar
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/camera_setting_toobar"
        android:title="设定"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <android.support.v7.widget.CardView
        android:layout_marginTop="4dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_0"
                    android:textColor="@color/camera_setting_line"
                    android:text="辅助设定"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/camera_setting_line" />
            </LinearLayout>
            <com.lin.meet.override.MyLayout
                android:gravity="center"
                android:id="@+id/c_layout_0"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="56dp">
                <TextView
                    android:id="@+id/st_txt_0"
                    android:layout_marginLeft="10dp"
                    android:textColor="#282828"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自动识别物体"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_txt_0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="静止时会尝试自动识别物体"
                    android:textSize="@dimen/text_1" />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/c_box_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="#00FFFFFF"
                    app:jtbDuration="200"
                    app:jtbJelly="lazy_tremble_head_slim_jim"
                    app:jtbLeftBackgroundColor="#DCDCDC"
                    app:jtbRightBackgroundColor="#BBDEFB"
                    app:jtbLeftThumbColor="#B8B8B8"
                    app:jtbRightThumbColor="#82B1FF"
                     />
            </com.lin.meet.override.MyLayout>
            <com.lin.meet.override.MyLayout
                android:gravity="center"
                android:id="@+id/c_layout_5"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="56dp">
                <TextView
                    android:id="@+id/st_txt_5"
                    android:layout_marginLeft="10dp"
                    android:textColor="#282828"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="触摸拍摄识别"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_txt_5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="触摸屏幕会进行拍摄识别"
                    android:textSize="@dimen/text_1" />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/c_box_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="#00FFFFFF"
                    app:jtbDuration="200"
                    app:jtbJelly="lazy_tremble_head_slim_jim"
                    app:jtbLeftBackgroundColor="#DCDCDC"
                    app:jtbRightBackgroundColor="#BBDEFB"
                    app:jtbLeftThumbColor="#B8B8B8"
                    app:jtbRightThumbColor="#82B1FF"
                    />
            </com.lin.meet.override.MyLayout>
            <com.lin.meet.override.MyLayout
                android:gravity="center"
                android:id="@+id/c_layout_1"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="56dp">
                <TextView
                    android:id="@+id/st_txt_1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#282828"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重力感应效果"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_txt_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="对话框会跟随重力改变而偏移"
                    android:textSize="@dimen/text_1" />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/c_box_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="#00FFFFFF"
                    app:jtbDuration="200"
                    app:jtbJelly="lazy_tremble_head_slim_jim"
                    app:jtbLeftBackgroundColor="#DCDCDC"
                    app:jtbRightBackgroundColor="#BBDEFB"
                    app:jtbLeftThumbColor="#B8B8B8"
                    app:jtbRightThumbColor="#82B1FF"
                    />
            </com.lin.meet.override.MyLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="12dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_0"
                    android:textColor="@color/camera_setting_line"
                    android:text="一般设定"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/camera_setting_line" />
            </LinearLayout>
            <com.lin.meet.override.MyLayout
                android:gravity="center"
                android:id="@+id/c_layout_2"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="56dp">
                <TextView
                    android:id="@+id/st_txt_2"
                    android:layout_marginLeft="10dp"
                    android:textColor="#282828"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存已拍摄的图片"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_txt_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="保存您拍摄过的所有照片"
                    android:textSize="@dimen/text_1" />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/c_box_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="#00FFFFFF"
                    app:jtbDuration="200"
                    app:jtbJelly="lazy_tremble_head_slim_jim"
                    app:jtbLeftBackgroundColor="#DCDCDC"
                    app:jtbRightBackgroundColor="#BBDEFB"
                    app:jtbLeftThumbColor="#B8B8B8"
                    app:jtbRightThumbColor="#82B1FF"
                    />
            </com.lin.meet.override.MyLayout>
            <com.lin.meet.override.MyLayout
                android:gravity="center"
                android:visibility="visible"
                android:id="@+id/c_layout_3"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="56dp">
                <TextView
                    android:id="@+id/st_txt_3"
                    android:textColor="#282828"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="位置信息"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_txt_3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="每张图片嵌入地理位置信息"
                    android:textSize="@dimen/text_1" />
                <com.nightonke.jellytogglebutton.JellyToggleButton
                    android:id="@+id/c_box_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="#00FFFFFF"
                    app:jtbDuration="200"
                    app:jtbJelly="lazy_tremble_head_slim_jim"
                    app:jtbLeftBackgroundColor="#DCDCDC"
                    app:jtbRightBackgroundColor="#BBDEFB"
                    app:jtbLeftThumbColor="#B8B8B8"
                    app:jtbRightThumbColor="#82B1FF"
                    />
            </com.lin.meet.override.MyLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="12dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_0"
                    android:textColor="@color/camera_setting_line"
                    android:text="联系我们"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/camera_setting_line" />
            </LinearLayout>
            <RelativeLayout
                android:gravity="center|start"
                android:id="@+id/c_layout_4"
                android:background="@drawable/bg_ripple_rrect_gray"
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_height="56dp">
                <TextView
                    android:id="@+id/st_txt_4"
                    android:textColor="#282828"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_txt_4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="您可以向我们反馈你所遇到的问题"
                    android:textSize="@dimen/text_1"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>