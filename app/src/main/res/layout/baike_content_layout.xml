<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/text_2"
        android:layout_marginTop="12dp"
        android:text="标题"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:textColor="@color/text_white_2"
        android:background="@drawable/bg_baike_title"
        android:id="@+id/baike_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/baike_content"
        android:text="内容"
        android:textColor="@color/text_back_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/baike_image_layout"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/baike_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
</LinearLayout>
