<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:orientation="vertical"
    android:id="@+id/comment_item"
    android:clickable="true"
    android:background="@drawable/bg_ripple_rect_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/video_user_layout"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/comment_header"
            android:layout_gravity="center"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/header"
            />
        <TextView
            android:id="@+id/comment_nickName"
            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/comment_header"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_0"
            android:textColor="#3F84A5"
            android:text="用户"/>
        <TextView
            android:id="@+id/comment_time"
            android:layout_marginStart="5dp"
            android:layout_below="@id/comment_nickName"
            android:layout_toRightOf="@+id/comment_header"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/text_back_1"
            android:text="2019年3月22日"/>
        <LinearLayout
            android:padding="1dp"
            android:id="@+id/comment_like"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/like"
                android:padding="2dp"
                android:id="@+id/comment_thumb"
                android:layout_width="22dp"
                android:layout_height="22dp" />
            <TextView
                android:layout_gravity="center"
                android:textSize="@dimen/text_0"
                android:id="@+id/thumb_count"
                android:gravity="center"
                android:layout_marginEnd="20dp"
                android:text="点赞"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginStart="44dp"
        android:textColor="@color/text_back_2"
        android:layout_marginEnd="15dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginBottom="4dp"
        android:layout_marginStart="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/reply_shape"
            android:text="回复"
            android:textColor="@color/text_back_1"
            android:textSize="10sp"
            android:id="@+id/comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
