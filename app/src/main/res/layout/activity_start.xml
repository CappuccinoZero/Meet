<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/gradient_bg"
    android:id="@+id/ripple_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textColor="@color/text_white_2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="49sp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/login_text"
        android:textColor="@color/text_white_2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:text="Go to different places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/text_white_2"
        android:layout_marginStart="30dp"
        android:layout_below="@id/login_text"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:textSize="28sp"
        android:text="see different scenery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/check_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/bg_ripple_login"
        android:textSize="@dimen/text_2"
        android:text="登录"
        android:backgroundTint="#fff"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/check_register"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:textColor="@color/text_white_2"
        android:textSize="@dimen/text_2"
        android:text="注册"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>