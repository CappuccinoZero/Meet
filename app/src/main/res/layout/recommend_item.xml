<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommend_card"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:transitionName="recommend_item"
    android:foreground="@drawable/bg_ripple_rect_borderless"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:focusable="true"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recommend_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginStart="12dp"
                android:id="@+id/recommend_item_header"
                android:layout_gravity="center"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/header2"
                app:civ_border_width="1dp"
                app:civ_border_color="#fff" />
            <TextView
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:id="@+id/recommend_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者"
                android:background="@drawable/dynamic_nickname"
                android:textColor="#77A2B7"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/gradient_bg_recommend"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="bottom"
                android:transitionName="recommend_text"
                android:id="@+id/recommend_item_title"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
