<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recommend_card"
    android:layout_marginBottom="6dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="@drawable/bg_ripple_rect_borderless"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    android:focusable="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@color/line_back"
                android:layout_toLeftOf="@id/recommend_item_type"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/recommend_item_type"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                />
            <View
                android:background="@color/line_back"
                android:layout_toRightOf="@id/recommend_item_type"
                android:layout_centerVertical="true"
                android:layout_width="15dp"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:transitionName="recommend_img"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/img_layout"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/recommend_item_img"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_image" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/roundView"
                android:transitionName="recommend_view"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_top"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <TextView
                android:transitionName="recommend_text"
                android:id="@+id/recommend_item_title"
                android:textSize="18sp"
                android:textColor="#4B4B4B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                />
        </LinearLayout>
        <View
            android:layout_marginStart="10dp"
            android:background="@color/line_back"
            android:layout_width="80dp"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recommend_item_header"
                android:layout_gravity="center"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/temp"
                app:civ_border_color="#C8C8C8"
                app:civ_border_width="1dp"
                />
            <TextView
                android:id="@+id/recommend_item_author"
                android:layout_marginStart="5dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#00BFA5"
                android:text="作者"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
