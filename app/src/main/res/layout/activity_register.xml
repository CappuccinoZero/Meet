<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wave_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/waveBack"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:src="@mipmap/onback_white"
        android:background="@drawable/bg_ripple_oval_black"
        android:padding="5dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <EditText
        android:cursorVisible="false"
        android:gravity="center"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/text_2"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/login_shape"
        android:layout_marginTop="180dp"
        android:maxLength="11"
        android:maxLines="1"
        android:inputType="numberSigned"
        android:id="@+id/register_username_edit"
        android:hint="输入手机号"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:paddingEnd="20dp"
        android:cursorVisible="false"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textSize="@dimen/text_2"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/login_shape"
        android:layout_below="@id/register_username_edit"
        android:layout_marginTop="60dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:id="@+id/register_password_edit"
        android:hint="设置登录密码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textSize="@dimen/text_3"
        android:layout_centerHorizontal="true"
        android:id="@+id/register_next"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/register_password_edit"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="下一步"
        android:background="@drawable/bg_ripple_register_next"
        android:layout_width="200dp"
        android:layout_height="60dp" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/register_sms_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/register_text_0"
            android:layout_marginStart="25dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/text_white_2"
            android:textSize="@dimen/text_3"
            android:text="验证码已经发送至"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="25dp"
            android:layout_below="@id/register_text_0"
            android:id="@+id/register_phone_message"
            android:textColor="@color/text_white_1"
            android:textSize="@dimen/text_2"
            android:text="+86 177****5856"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="60dp"
            android:layout_toRightOf="@id/register_text_0"
            android:layout_below="@id/register_text_0"
            android:id="@+id/register_counter"
            android:textColor="@color/text_white_1"
            android:textSize="@dimen/text_3"
            android:text="60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginStart="60dp"
            android:layout_toRightOf="@id/register_text_0"
            android:layout_below="@id/register_text_0"
            android:id="@+id/register_reSend"
            android:textColor="#E0F2F1"
            android:textSize="@dimen/text_2"
            android:text="重新获取"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.design.widget.TextInputLayout
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="25dp"
            android:id="@+id/register_veri_layout"
            android:layout_below="@id/register_phone_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:maxLength="6"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:maxLines="1"
                android:id="@+id/register_veri_edit"
                android:gravity="center"
                android:textSize="@dimen/text_5"
                android:layout_below="@id/register_phone_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</RelativeLayout>