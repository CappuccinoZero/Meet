<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_ripple_baike"
    android:clickable="true"
    android:id="@+id/baike_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_width="125dp"
        android:layout_height="match_parent">
        <ImageView
            android:transitionName="baike_img"
            android:scaleType="centerCrop"
            android:id="@+id/baike_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:transitionName="baike_cnName"
            android:id="@+id/baike_cnName"
            android:textColor="@color/text_back_2"
            android:text="中文名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:transitionName="baike_enName"
            android:id="@+id/baike_enName"
            android:textColor="@color/text_back_2"
            android:text="English Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/baike_introduce"
            android:textSize="11sp"
            android:layout_marginTop="10dp"
            android:text="南露脊鲸（学名：Eubalaena australis），又名黑露脊鲸，目前估计大约有7,500条南露脊鲸生活在南半球的南部海域。南露脊鲸是由德穆兰（Desmoulins）于1822年所描述，后来在1864年格雷将南露脊..."
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
